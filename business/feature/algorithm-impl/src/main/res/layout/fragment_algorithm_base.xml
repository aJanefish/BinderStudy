<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <FrameLayout
        android:id="@+id/algorithm_context_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:background="@color/white"
        android:visibility="visible">
        <!--   内容区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!--标题区域-->
            <TextView
                android:id="@+id/sort_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="排序-冒泡"
                android:textColor="@color/black"
                android:textSize="@dimen/context_title" />

            <TextView
                android:id="@+id/sort_step_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:gravity="center"
                android:text="第一趟第一次比较"
                android:textColor="@color/black"
                android:textSize="@dimen/context_step_des" />

            <!--提示区域-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/statues_unsorted"
                    android:gravity="center"
                    android:text="待处理"
                    android:textColor="@color/black"
                    android:textSize="@dimen/context_step_des" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="9dp"
                    android:layout_weight="1"
                    android:background="@color/statues_sorting"
                    android:gravity="center"
                    android:text="正在处理"
                    android:textColor="@color/black"
                    android:textSize="@dimen/context_step_des" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/statues_sorted"
                    android:gravity="center"
                    android:text="已处理"
                    android:textColor="@color/black"
                    android:textSize="@dimen/context_step_des" />

            </LinearLayout>

            <!--数据展示区域-->

            <!--  下标提示 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/statues_text_color"
                    android:textSize="@dimen/context_des" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/statues_text_color"
                    android:textSize="@dimen/context_des" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/statues_text_color"
                    android:textSize="@dimen/context_des" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/statues_text_color"
                    android:textSize="@dimen/context_des" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/statues_text_color"
                    android:textSize="@dimen/context_des" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/statues_text_color"
                    android:textSize="@dimen/context_des" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/statues_text_color"
                    android:textSize="@dimen/context_des" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/statues_text_color"
                    android:textSize="@dimen/context_des" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/statues_text_color"
                    android:textSize="@dimen/context_des" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/statues_text_color"
                    android:textSize="@dimen/context_des" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:background="@color/statues_unsorted">
                <!--下标1-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/sort_first_index"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="@dimen/dp_8"
                        android:background="@drawable/sort_index_blue" />

                </LinearLayout>

                <!--下标2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/sort_second_index"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="@dimen/dp_10"
                        android:background="@drawable/sort_index_red" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center">

                <!--动画区域-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom">


                    <TextView
                        android:id="@+id/pk_first"
                        android:layout_width="@dimen/pk_wh"
                        android:layout_height="@dimen/pk_wh"
                        android:layout_gravity="bottom|center"
                        android:layout_marginEnd="@dimen/pk_wh"
                        android:background="@drawable/background_line"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="48sp" />


                    <TextView
                        android:id="@+id/pk_second"
                        android:layout_width="@dimen/pk_wh"
                        android:layout_height="@dimen/pk_wh"
                        android:layout_gravity="bottom|center"
                        android:layout_marginStart="@dimen/pk_wh"
                        android:background="@drawable/background_line"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="48sp" />

                    <TextView
                        android:id="@+id/pk_op"
                        android:layout_width="@dimen/pk_wh"
                        android:layout_height="@dimen/pk_wh"
                        android:layout_gravity="bottom|center"
                        android:background="@drawable/background_line"
                        android:gravity="center"
                        android:text="vs"
                        android:textColor="@color/black"
                        android:textSize="48sp" />

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/sort_compare_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:background="@color/statues_unsorted"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/sort_min_index"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="@dimen/dp_8"
                        android:background="@drawable/sort_min_index" />
                </LinearLayout>


                <!--内容区域-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_line"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/sort_index_0"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/select_margin_top"
                        android:layout_weight="1"
                        android:background="@drawable/background_line"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/statues_text_color"
                        android:textSize="@dimen/context_des" />

                    <TextView
                        android:id="@+id/sort_index_1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/select_margin_top"
                        android:layout_weight="1"
                        android:background="@drawable/background_line"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/statues_text_color"
                        android:textSize="@dimen/context_des" />

                    <TextView
                        android:id="@+id/sort_index_2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/select_margin_top"
                        android:layout_weight="1"
                        android:background="@drawable/background_line"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/statues_text_color"
                        android:textSize="@dimen/context_des" />

                    <TextView
                        android:id="@+id/sort_index_3"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/select_margin_top"
                        android:layout_weight="1"
                        android:background="@drawable/background_line"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/statues_text_color"
                        android:textSize="@dimen/context_des" />

                    <TextView
                        android:id="@+id/sort_index_4"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/select_margin_top"
                        android:layout_weight="1"
                        android:background="@drawable/background_line"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/statues_text_color"
                        android:textSize="@dimen/context_des" />

                    <TextView
                        android:id="@+id/sort_index_5"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/select_margin_top"
                        android:layout_weight="1"
                        android:background="@drawable/background_line"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/statues_text_color"
                        android:textSize="@dimen/context_des" />

                    <TextView
                        android:id="@+id/sort_index_6"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/select_margin_top"
                        android:layout_weight="1"
                        android:background="@drawable/background_line"
                        android:gravity="center"
                        android:text="6"
                        android:textColor="@color/statues_text_color"
                        android:textSize="@dimen/context_des" />

                    <TextView
                        android:id="@+id/sort_index_7"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/select_margin_top"
                        android:layout_weight="1"
                        android:background="@drawable/background_line"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="@color/statues_text_color"
                        android:textSize="@dimen/context_des" />

                    <TextView
                        android:id="@+id/sort_index_8"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/select_margin_top"
                        android:layout_weight="1"
                        android:background="@drawable/background_line"
                        android:gravity="center"
                        android:text="8"
                        android:textColor="@color/statues_text_color"
                        android:textSize="@dimen/context_des" />

                    <TextView
                        android:id="@+id/sort_index_9"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/select_margin_top"
                        android:layout_weight="1"
                        android:background="@drawable/background_line"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/statues_text_color"
                        android:textSize="@dimen/context_des" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/entering_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_50"
                android:gravity="center"
                android:text="一分钟认识"
                android:textColor="@color/black"
                android:textSize="@dimen/context_title" />

            <TextView
                android:id="@+id/enter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="冒泡排序"
                android:textColor="@color/red"
                android:textSize="@dimen/enter_title" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>