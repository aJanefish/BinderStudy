<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/algorithm_context_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--标题区域-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="排序-冒泡"
            android:textColor="@color/black"
            android:textSize="36sp" />

        <!--提示区域-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/gray"
                android:gravity="center"
                android:text="待处理"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="9dp"
                android:layout_weight="1"
                android:background="@color/red"
                android:gravity="center"
                android:text="正在处理"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/green"
                android:gravity="center"
                android:text="已处理"
                android:textColor="@color/black"
                android:textSize="24sp" />

        </LinearLayout>

        <!--数据展示区域-->

        <!--  下标提示 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:paddingEnd="8dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_line"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_line"
                android:gravity="center"
                android:text="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_line"
                android:gravity="center"
                android:text="2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_line"
                android:gravity="center"
                android:text="3" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_line"
                android:gravity="center"
                android:text="4" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_line"
                android:gravity="center"
                android:text="5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_line"
                android:gravity="center"
                android:text="6" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_line"
                android:gravity="center"
                android:text="7" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_line"
                android:gravity="center"
                android:text="8" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_line"
                android:gravity="center"
                android:text="9" />

        </LinearLayout>

        <!--下标1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/gray"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:id="@+id/sort_first_index"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/sort_index_blue" />


        </LinearLayout>
        <!--下标2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:id="@+id/sort_second_index"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/sort_index_red" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--动画区域-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/pk_first"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="100dp"
                    android:background="@color/green"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="48sp" />


                <TextView
                    android:id="@+id/pk_second"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="100dp"
                    android:background="@color/green"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/pk_op"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=">"
                    android:textColor="@color/black"
                    android:textSize="36sp" />


                <TextView
                    android:id="@+id/pk_result"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:text="交换"
                    android:textColor="@color/black"
                    android:textSize="32sp" />


            </FrameLayout>

            <!--内容区域-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:paddingEnd="8dp">


                <TextView
                    android:id="@+id/sort_index_0"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    android:id="@+id/sort_index_1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="1" />

                <TextView
                    android:id="@+id/sort_index_2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="2" />

                <TextView
                    android:id="@+id/sort_index_3"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="3" />

                <TextView
                    android:id="@+id/sort_index_4"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="4" />

                <TextView
                    android:id="@+id/sort_index_5"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="5" />

                <TextView
                    android:id="@+id/sort_index_6"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="6" />

                <TextView
                    android:id="@+id/sort_index_7"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="7" />

                <TextView
                    android:id="@+id/sort_index_8"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="8" />

                <TextView
                    android:id="@+id/sort_index_9"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_line"
                    android:gravity="center"
                    android:text="9" />

            </LinearLayout>


        </FrameLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/algorithm_ending_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <!--ending 区域-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="谢谢观看"
            android:textColor="@color/black"
            android:textSize="72sp" />


    </FrameLayout>

</FrameLayout>